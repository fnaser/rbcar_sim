<?xml version="1.0"?>
<launch>

  <!-- roslaunch arguments -->
  <arg name="debug" default="false"/>
  <arg name="gui" default="true"/>
  <arg name="robot_name"/>

  <!-- rbcar_control launch file -->
  <include file="$(find rbcar_control)/launch/rbcar_control.launch" />

  <!-- We resume the logic in empty_world.launch, changing only the name of the world to be launched -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <!--arg name="world_name" value="$(find rbcar_gazebo)/worlds/rbcar.world"/-->
    <arg name="world_name" value="$(find catvehicle)/worlds/small_city.world"/>
    <arg name="debug" value="$(arg debug)" />
    <arg name="gui" value="$(arg gui)" />
    <arg name="paused" value="false"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="headless" value="false"/>
  </include>

  <!-- Load the URDF into the ROS Parameter Server -->
  <!--param name="robot_description"
         command="$(find xacro)/xacro.py '$(find rbcar_description)/robots/rbcar.urdf.xacro'" /-->
  <param name="robot_description"
         command="$(find xacro)/xacro '$(find rbcar_description)/robots/rbcar_2_lidars.urdf.xacro' roboname:='$(arg robot_name)'" />

  <group ns="$(arg robot_name)">
  <include file="$(find catvehicle)/launch/tfs_2_lidars.launch">
    <arg name="robot_name" value="$(arg robot_name)"/>
  </include>
  </group>
         
  <!-- Call a python script to the run a service call to gazebo_ros to spawn a URDF robot -->
  <node name="urdf_spawner" pkg="gazebo_ros" type="spawn_model" respawn="false" output="screen"
        args="-urdf -model rbcar -param robot_description -z 1"/>

</launch>
